{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2021"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "..",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "../shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "../shared/**/__tests__/**",
    "../shared/**/*.test.ts",
    "../shared/**/*.spec.ts",
    "lib",
    "dist",
    "../server",
    "../client"
  ]
}
