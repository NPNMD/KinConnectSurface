# Firebase Configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# Firebase Admin SDK (for server-side Firestore access)
# Get this from Firebase Console > Project Settings > Service Accounts > Generate new private key
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your_project_id","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-...@your_project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-..."}

# API Configuration
VITE_API_URL=http://localhost:5000/api

# Google Maps API (for address autocomplete)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Google Calendar API (for appointment scheduling)
VITE_GOOGLE_CALENDAR_API_KEY=your_google_calendar_api_key_here
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here

# Drug API Configuration (RxNorm/NIH)
VITE_DRUG_API_BASE_URL=https://rxnav.nlm.nih.gov/REST

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Configuration
EMAIL_PROVIDER=resend
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@kinconnect.com

# Redis Cache Configuration
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=true
CACHE_TTL_DRUG_DATA=86400
CACHE_TTL_IMAGES=604800
CACHE_KEY_VERSION=v1

# Sentry Error Monitoring
# Get DSN from: https://sentry.io/settings/your-org/projects/your-project/keys/
# Client-side (React)
VITE_SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
VITE_SENTRY_ENVIRONMENT=development
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1
VITE_SENTRY_RELEASE=1.0.0
VITE_ENABLE_ERROR_TRACKING=false
VITE_SENTRY_DEBUG=false

# Server-side (Node.js/Functions)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/your_project_id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_RELEASE=1.0.0
ENABLE_ERROR_TRACKING=false

# Feature Flags
ENABLE_DRUG_IMAGES=true
ENABLE_CLINICAL_INFO=true
ENABLE_AUTHORIZATION=true