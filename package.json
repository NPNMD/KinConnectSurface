{
  "name": "kinconnect",
  "type": "module",
  "version": "1.0.0",
  "description": "Family care coordination platform for managing patient medical information",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "dev:functions": "concurrently \"npm run emulators\" \"npm run client:dev:functions\"",
    "emulators": "firebase emulators:start --only functions",
    "server:dev": "tsx watch server/index.ts",
    "client:dev": "vite",
    "client:dev:functions": "cross-env USE_FUNCTIONS_EMULATOR=1 vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server/server/index.js",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "healthcare",
    "family",
    "coordination",
    "firebase",
    "react"
  ],
  "author": "KinConnect Team",
  "license": "MIT",
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.10",
    "@tanstack/react-query": "^5.8.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^14.12.0",
    "googleapis": "^156.0.0",
    "helmet": "^7.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
