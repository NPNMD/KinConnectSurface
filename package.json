{
  "name": "kinconnect",
  "type": "module",
  "version": "1.0.0",
  "description": "Family care coordination platform for managing patient medical information",
  "main": "server/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "setup:firebase": "node scripts/setup-firebase.js",
    "deploy": "npm run build && firebase deploy",
    "deploy:cache-bust": "node scripts/deploy-with-cache-bust.js",
    "deploy:functions": "cd functions && npm run deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:all": "npm run build && cd functions && npm run build && cd .. && firebase deploy",
    "quick-deploy": "npm run build && firebase deploy --only hosting,functions"
  },
  "keywords": [
    "healthcare",
    "family",
    "coordination",
    "firebase",
    "react"
  ],
  "author": "KinConnect Team",
  "license": "MIT",
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.10",
    "@sendgrid/mail": "^8.1.5",
    "@tanstack/react-query": "^5.8.4",
    "@types/twilio": "^3.19.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "firebase-tools": "^14.12.0",
    "googleapis": "^156.0.0",
    "helmet": "^7.1.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "tailwind-merge": "^2.0.0",
    "twilio": "^5.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.31",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.3.5",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0"
  }
}
